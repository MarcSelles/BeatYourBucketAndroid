package com.byb.beatyourbucket;

import java.util.ArrayList;
import java.util.List;

import android.app.Fragment;
import android.os.Bundle;
import android.support.annotation.Nullable;
import android.view.LayoutInflater;
import android.view.View;
import android.view.ViewGroup;
import android.widget.LinearLayout;

public class FragmentLists extends Fragment {
	@Override
	public View onCreateView(LayoutInflater inflater,
			@Nullable ViewGroup container, @Nullable Bundle savedInstanceState) {
		// TODO Auto-generated method stub
		View v = inflater.inflate(R.layout.fragment_lists, container, false);
		return v;
	}
	
	@Override 
    public void onActivityCreated(Bundle savedInstanceState) {  
        super.onActivityCreated(savedInstanceState);  
           
        // Krijg de data van lijst
        Bundle bundle = getArguments();  
        String data = bundle.getString("arg");  
           
        List<String> chlist = new ArrayList<String>();  
        for(int i=0, count=20; i<count; i++){  
            chlist.add(data);  
        }  
           
        LinearLayout layout = (LinearLayout) getActivity().findViewById(R.id.detail_container);  
           
        ListView lv = (ListView) getActivity().findViewById(R.id.fragment_detail);  
        lv.setAdapter(new ArrayAdapter(getActivity(), android.R.layout.simple_list_item_1, chlist));  
           
        Configuration configuration = getActivity().getResources().getConfiguration();  
        int ori = configuration.orientation;  
       
    }  
}
