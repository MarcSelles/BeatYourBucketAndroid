	public void changeFragment() {
	    FragmentTransaction FT = getFragmentManager().beginTransaction();
	    FragmentMain FM = new FragmentMain();
	    FT.replace(R.id.tabcontent, FM);
	    FT.commit();
	}
	
	
	
	
	
	
